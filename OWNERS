# See the OWNERS docs at https://go.k8s.io/owners

filters:
  ".*":
    reviewers:
      - code-reviewers
    approvers:
      - approvers
    emeritus_approvers:
      - emeritus_approvers

  "cluster-up/.*|WORKSPACE|.bazel.*|.fossa.yml|cluster-up-sha.txt":
    reviewers:
      - sig-buildsystem-reviewers
    approvers:
      - sig-buildsystem-approvers
    labels:
      - sig/buildsystem
  ".*_test.go":
    reviewers:
      - sig-test-reviewers
    approvers:
       - sig-test-approvers
    labels:
      - sig/test
  ".golangci.yml":
    approvers:
      - sig-test-approvers
      - sig-compute-approvers
      - sig-network-approvers

  # go.{mod,sum} files relate to go dependencies, and should be reviewed by the
  # dep-approvers
  "go\\.(mod|sum)$":
    approvers:
      - dep-approvers
    required_reviewers:
      - dep-approvers
    labels:
      - area/dependency

  "docs/metrics.md":
    reviewers:
      - sig-observability-reviewers
    approvers:
      - sig-observability-approvers
    labels:
      - sig/observability
