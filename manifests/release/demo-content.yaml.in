# Virtual Machine Presets
apiVersion: kubevirt.io/v1alpha2
kind: VirtualMachineInstancePreset
metadata:
  name: microsoft-windows-server-2012r2
spec:
  selector:
    matchLabels:
      kubevirt.io/os: win2k12r2
  domain:
    cpu:
      cores: 2
    resources:
      requests:
        memory: 2G
    features:
      acpi: {}
      apic: {}
      hyperv:
        relaxed: {}
        vapic: {}
        spinlocks:
          spinlocks: 8191
    clock:
      utc: {}
      timer:
        hpet:
          present: false
        pit:
          tickPolicy: delay
        rtc:
          tickPolicy: catchup
        hyperv: {}
---
apiVersion: kubevirt.io/v1alpha2
kind: VirtualMachineInstancePreset
metadata:
  name: redhat-enterprise-linux-7.4
spec:
  selector:
    matchLabels:
      kubevirt.io/os: rhel7.4
  domain:
    cpu:
      cores: 4
    resources:
      requests:
        memory: 4G
