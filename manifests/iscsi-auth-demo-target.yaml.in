apiVersion: v1
kind: Secret
metadata:
  name: iscsi-auth-demo-secret
type: "kubernetes.io/iscsi-chap"  
data:
  node.session.auth.username: ZGVtb3VzZXI=
  node.session.auth.password: ZGVtb3Bhc3N3b3Jk
---
apiVersion: v1
kind: Service
metadata:
  name: iscsi-auth-demo-target
spec:
  ports:
    - name: iscsi
      port: 3260
      targetPort: 3260
  selector:
    app: iscsi-auth-demo-target
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: iscsi-auth-demo-target-tgtd
spec:
  template:
    metadata:
      labels:
        name: iscsi-auth-demo-target-tgtd
        app: iscsi-auth-demo-target
      name: iscsi-auth-demo-target-tgtd
    spec:
      containers:
        - name: target
          image: {{ docker_prefix }}/iscsi-demo-target-tgtd:{{ docker_tag }}
          ports:
            - containerPort: 3260
          volumeMounts:
          - name: host
            mountPath: /host
          env:
            - name: EXPORT_HOST_PATHS
              value:
            - name: PASSWORD
              value: demopassword
            - name: USERNAME
              value: demouser
      volumes:
        - name: host
          hostPath:
            path: /
