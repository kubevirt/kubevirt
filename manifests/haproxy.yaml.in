apiVersion: v1
kind: Service
metadata:
  name: haproxy-service
spec:
  ports:
    - port: 8184
      targetPort: haproxy
  externalIPs :
    - "{{ master_ip }}"
  selector:
    app: haproxy
---
apiVersion: v1
kind: Pod
metadata:
  name: haproxy
  labels:
    app: haproxy
spec:
  containers:
  - name: haproxy
    image: {{ docker_prefix }}/haproxy:{{ docker_tag }}
    imagePullPolicy: IfNotPresent
    ports:
      - containerPort: 8184
        name: "haproxy"
        protocol: "TCP"
  - name: rsyslog
    image: {{ docker_prefix }}/rsyslog:{{ docker_tag }}
    imagePullPolicy: IfNotPresent
    args: ["-f", "/rsyslog.conf"]
