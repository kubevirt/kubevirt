apiVersion: v1
kind: Service
metadata:
  name: haproxy-service
spec:
  ports:
    - port: 8184
      targetPort: haproxy
  externalIPs :
    - "{{ master_ip }}"
  selector:
    app: haproxy
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: haproxy
spec:
  template:
    metadata:
      labels:
        app: haproxy
    spec:
      serviceAccountName: kubevirt-admin
      containers:
      - name: haproxy
        image: {{ docker_prefix }}/haproxy:{{ docker_tag }}
        imagePullPolicy: IfNotPresent
        ports:
          - containerPort: 8184
            name: "haproxy"
            protocol: "TCP"
      securityContext:
        runAsNonRoot: true
      nodeSelector:
        kubernetes.io/hostname: {{ primary_node_name }}
