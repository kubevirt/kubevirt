apiVersion: v1
kind: Secret
metadata:
  name: iscsi-auth-demo-secret
  namespace: kube-system
  labels:
    kubevirt.io: ""
type: "kubernetes.io/iscsi-chap"
data:
  node.session.auth.username: ZGVtb3VzZXI=
  node.session.auth.password: ZGVtb3Bhc3N3b3Jk
---
apiVersion: v1
kind: Service
metadata:
  name: iscsi-auth-demo-target
  namespace: kube-system
  labels:
    kubevirt.io: "iscsi-auth-demo-target"
spec:
  ports:
    - name: iscsi
      port: 3260
      targetPort: 3260
  selector:
    kubevirt.io: iscsi-auth-demo-target
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: iscsi-auth-demo-target-tgtd
  namespace: kube-system
  labels:
    kubevirt.io: "iscsi-auth-demo-target"
spec:
  template:
    metadata:
      labels:
        name: iscsi-auth-demo-target-tgtd
        kubevirt.io: iscsi-auth-demo-target
      name: iscsi-auth-demo-target-tgtd
    spec:
      serviceAccountName: kubevirt-testing
      containers:
        - name: target
          image: {{ docker_prefix }}/iscsi-demo-target-tgtd:{{ docker_tag }}
          ports:
            - containerPort: 3260
          volumeMounts:
          - name: host
            mountPath: /host
          env:
            - name: EXPORT_HOST_PATHS
              value:
            - name: PASSWORD
              value: demopassword
            - name: USERNAME
              value: demouser
          securityContext:
            privileged: true
          readinessProbe:
            exec:
              command:
              - cat
              - /tmp/previous_state
            initialDelaySeconds: 5
            periodSeconds: 5
      volumes:
        - name: host
          hostPath:
            path: /
