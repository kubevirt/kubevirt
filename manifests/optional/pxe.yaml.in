---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: RoleBinding
metadata:
  name: pxe
  labels:
    kubevirt.io: ""
roleRef:
  kind: ClusterRole
  name: pxe
  apiGroup: rbac.authorization.k8s.io
subjects:
  - kind: ServiceAccount
    name: pxe
---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRole
metadata:
  name: pxe
  labels:
    kubevirt.io: ""
rules:
  - apiGroups:
      - kubevirt.io
    resources:
      - virtualmachineinstances
    verbs:
      - get
      - list
      - watch
  - apiGroups:
      - kubevirt.io
    resources:
      - pxes
    verbs:
      - get
      - list
      - watch
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: pxe
  labels:
    kubevirt.io: ""
---
apiVersion: v1
kind: Service
metadata:
  name: pxeserver
  labels:
    kubevirt.io: "pxe"
spec:
  clusterIP: 10.102.211.168
  ports:
    - port: 80
      targetPort: 8080
      protocol: TCP
  selector:
    kubevirt.io: pxe
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: pxeserver
  labels:
    kubevirt.io: "pxe"
spec:
  replicas: 1
  template:
    metadata:
      labels:
        kubevirt.io: pxe
        prometheus.kubevirt.io: ""
    spec:
      serviceAccountName: pxe
      containers:
        - name: pxeserver
          image: {{.DockerPrefix}}/pxe:{{.DockerTag}}
          imagePullPolicy: {{.ImagePullPolicy}}
          command:
              - "pxe"
          ports:
            - containerPort: 8080
              name: "pxe"
              protocol: "TCP"
          securityContext:
            runAsNonRoot: true
---
