{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>platform-engineering-org/.github"
  ],
  "automerge": false,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "hack/config"
      ],
      "matchStrings": [
        "CDI_VERSION=\"(?<currentValue>.*)\""
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "kubevirt/containerized-data-importer"
    }
  ],
  "packageRules": [
    {
      "description": "CDI",
      "matchPackageNames": [
        "kubevirt/containerized-data-importer"
      ],
      "versioning": "regex:^v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(-(?<prerelease>.*))?$",
      "groupName": null
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github-actions",
      "pinDigests": false
    },
    {
      "description": "Group pip requirements updates",
      "matchManagers": [
        "pip_requirements"
      ],
      "groupName": "pip_requirements"
    },
    {
      "description": "Group dockerfile updates",
      "matchManagers": [
        "dockerfile"
      ],
      "excludePackageNames": [
        "docker.io/golang"
      ],
      "groupName": "dockerfile"
    },
    {
      "matchPackageNames": [
        "docker.io/golang"
      ],
      "dependencyDashboardApproval": true,
      "groupName": null
    },
    {
      "matchPackageNames": [
        "quay.io/centos/centos"
      ],
      "pinDigests": false,
      "groupName": null
    },
    {
      "matchManagers": ["gomod"],
      "enabled": false
    },
    {
      "excludePackageNames": [
        "registry.ci.openshift.org/ocp/builder:rhel-9-golang"
      ],
      "groupName": "dockerfile"
    }
  ]
}
